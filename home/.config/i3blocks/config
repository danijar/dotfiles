[cpu_usage]
label=CPU
command=$HOME/bin/cpu_usage
interval=5

[memory]
label=RAM
command=$HOME/bin/ram_usage
interval=5

[gpu_usage]
label=GPU
command=$HOME/bin/gpu_usage
interval=5

[gpu_memory]
label=VRM
command=$HOME/bin/gpu_memory
interval=5

[disk]
label=DSK
command=df -h ~ | tail -1 | awk '{ print $4 }'
interval=20

[wifi]
label=WFI
command=$HOME/bin/wifi
interval=1

# [iface]
# interval=1

[volume]
label=VOL
command=$HOME/bin/volume 5%
instance=Master
interval=1
signal=10

[battery]
command=$HOME/bin/battery
interval=10

[time]
command=date '+%Y-%m-%d %H:%M:%S '
interval=1
