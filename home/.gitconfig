[user]
  email = mail@danijar.com
  name = Danijar Hafner
[push]
  default = current
[pull]
  rebase = true
[rebase]
  autostash = true
[alias]
  append = commit --amend --no-edit
  reword = commit --amend
  list = log --name-only
  wip = !git add -A && git commit -m 'WIP' && git show
[init]
	defaultBranch = main
	editor = nvim
[core]
	excludesfile = ~/.gitignore_global
  pager = delta
[delta]
  syntax-theme = none
  hunk-header-style = raw
  hunk-header-decoration-style = none
  file-style = bold
  file-decoration-style = box
