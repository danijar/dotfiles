#!/bin/sh

# Defaults.
export EDITOR=vim

# User directories.
export PATH=$PATH:~/bin
export PATH=$PATH:~/.local/bin

# MuJoCo.
export MUJOCO_HOME=~/.mujoco/mjpro200
export PATH=$PATH:$MUJOCO_HOME/bin
export LD_LIBRARY_PATH=$MUJOCO_HOME/bin:$LD_LIBRARY_PATH

# Mac specific.
if [ -x "$(command -v brew)" ]; then
  export EDITOR=vi

  # Brew.
  export PATH=~/homebrew/bin:$PATH
  export LD_LIBRARY_PATH=~/homebrew/lib:$LD_LIBRARY_PATH
  # export DYLD_LIBRARY_PATH=~/homebrew/lib:$DYLD_LIBRARY_PATH
  # export DYLD_FALLBACK_LIBRARY_PATH=~/homebrew/lib
  export HOMEBREW_NO_AUTO_UPDATE=1

  # Ruby.
  export PATH=$PATH:~/.gem/ruby/2.3.0/bin

  # Mujoco.
  export DYLD_LIBRARY_PATH=$MUJOCO_HOME/bin:$DYLD_LIBRARY_PATH
fi
