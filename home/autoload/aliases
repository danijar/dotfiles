#!/bin/sh

# Filesystem interaction.
alias l='command ls --color=auto --group-directories-first'
alias ls='command ls --color=auto --group-directories-first -lhA --time-style long-iso'
alias ll='tree -aL 2'
ed() {
  if [ -z "$1" ]; then; 1=$PWD; fi
  ~/bin/edit_list \
      --content-cmd "find $1" \
      --rename-cmd 'mv {} {}' \
      --delete-cmd 'rm -rf {}'
}

# Resolve aliases for sudo.
alias sudo='sudo '

# Other.
alias nogpu='export CUDA_VISIBLE_DEVICES=-1;'
alias diff='git diff --no-index'

# Git.
alias gs='git status'
alias gl='git log'
alias ga='git add -A'
alias gc='git commit -m '
alias gd='git diff HEAD'
alias gdc='git diff --cached'
gr() { git rebase -i HEAD~$1 }

# Mercurial.
alias hs='hg status'
alias hd='hg diff'
alias ha='hg addremove'
alias hc='hg commit -m '
alias hl='hg xl'

# Python.
alias py='python3'
alias np='ipython --TerminalInteractiveShell.editing_mode=vi -i -c " \
  import sys; \
  import pathlib; \
  sys.path.append(str(pathlib.Path.home() / \"scripts\")); \
  from py_imports import *;"'
# alias tf='nogpu ipython -i -c " \
#   import functools, itertools, pathlib, re, json; \
#   import numpy as np; \
#   import matplotlib.pyplot as plt; \
#   import tensorflow as tf; \
#   import tensorflow_probability as tfp; \
#   from tensorflow_probability import distributions as tfd; \
#   import gym; \
#   random = np.random.RandomState(seed=0);"'
# alias pyprof='python3 -m cProfile -s cumulative'  # Use as pyprof script.py > profile.txt

# Docker
alias db='docker build -t image .'
alias dr='docker run --privileged -it --rm --gpus all image'
alias drl='docker run --privileged -it --rm --gpus all -v ~/logdir:/logdir image'
alias dbr='db && dr'
alias dbrl='db && drl'

# Default programs.
alias chrome='google-chrome-stable'
alias tmux='tmux -f ~/.config/tmux/tmux.conf'

# Mac specific.
if [ "$(uname -s)" = "Darwin" ]; then
  alias chrome='open -a "Google Chrome"'
  export PATH="/usr/local/opt/coreutils/libexec/gnubin:${PATH}"
  export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:${MANPATH}"
  # alias python3="/usr/bin/python3"
  # alias pip3="/usr/bin/pip3 --disable-pip-version-check"
  # alias vim="~/homebrew/Cellar/macvim/8.2-162/bin/vim"
  # alias vim="/usr/local/bin/vim"
  # alias l="~/homebrew/opt/coreutils/libexec/gnubin/ls --color=auto --group-directories-first"
  # alias ls="~/homebrew/opt/coreutils/libexec/gnubin/ls --color=auto --group-directories-first -lhA --time-style long-iso"
  # alias cp="~/homebrew/opt/coreutils/libexec/gnubin/cp"
  # alias mv="~/homebrew/opt/coreutils/libexec/gnubin/mv"
  # alias rm="~/homebrew/opt/coreutils/libexec/gnubin/rm"
fi

# SSH shortcuts.
alias gssh='gcert ; ssh -t danijar@danijar.tor.corp.google.com -L 6007:127.0.0.1:6007 -o ControlPath=none "gcert ; /bin/zsh"'
alias gsshfs="sudo killall sshfs -9 ; sudo killall sshfs -9 ; sudo diskutil unmount force $HOME/mnt/ws ; sshfs danijar@danijar.tor.corp.google.com:/usr/local/google/home/danijar $HOME/mnt/ws"

# Change directory hooks.
cd () {
    builtin cd "$*"
    l
    defer ~/bin/git_fetch_status
}

