#!/bin/sh

################################################################
# Startup script for GDM, KDM, LightDM, LXDM, SSDM.
################################################################

# Load Xorg configuration.
[ -f ~/.Xresources ] && xrdb -all -load ~/.Xresources

# Expose Xresources as environment variables.
. ~/bin/colors.sh

# Background applications.
. ~/bin/startup.sh &

# Keyboard layout and bindings.
. ~/bin/keyboard.sh &
